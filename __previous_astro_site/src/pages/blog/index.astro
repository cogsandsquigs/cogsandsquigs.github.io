---
// The blog page, where all posts are listed.
import Icon from "$components/Icon.astro";
import PostList from "$components/Posts/PostList.svelte";
import RootLayout from "$layouts/RootLayout.astro";
import { getBlogPosts } from "$lib/collections";

// Get the posts!
const posts = await getBlogPosts();
---

<RootLayout title="Blog">
	<h1 class="flex items-center space-x-2">
		<span>Blog</span>

		<a href="/blog/rss.xml">
			<Icon pack="mdi" name="rss" alt="An RSS icon linking to the blog's RSS feed." />
		</a>
	</h1>

	<PostList {posts} />
</RootLayout>
