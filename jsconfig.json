{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$styles/*": ["src/styles/*"],
      "$posts/*": ["src/routes/posts/*"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/**/*.svx",
    "src/**/*.md"
  ]
}
